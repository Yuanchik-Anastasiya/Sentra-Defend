<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/settings_screen"
    android:id="@+id/fragment_settings"
    tools:context=".presentation.ui.settings.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            style="@style/Title_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:paddingBottom="16dp" />

        <Switch
            android:id="@+id/switchNotifications"
            style="@style/Bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notifications"/>

        <Switch
            android:id="@+id/switchScheduledScan"
            style="@style/Bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scheduled scan"/>

        <Switch
            android:id="@+id/switchAutoUpdate"
            style="@style/Bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Database auto-update"/>

        <TextView
            android:id="@+id/tvApiKeys"
            style="@style/Bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="API keys"
            android:paddingTop="16dp"
            android:textColor="?android:attr/textColorPrimary" />

        <TextView
            android:id="@+id/tvTheme"
            style="@style/Bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Theme: System"
            android:paddingTop="16dp"
            android:textColor="?android:attr/textColorPrimary" />
    </LinearLayout>

</ScrollView>